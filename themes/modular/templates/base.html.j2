<!DOCTYPE html>
<html>
<head>
    {% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" type="text/css" href="{{ base_path }}css/style.css">
    <title>{% block title %}{% endblock %} - {{ site_title }}</title>
    {% endblock %}
</head>

<body id="{{ slug }}">
<header>
<nav>
{% block navigation %}
<section>
    <span class="home">
        <a href="{{ base_path }}">Home</a>
    </span>
    <span class="links">
        {% if header_menu %}
        {% for link in header_menu %}
        <a href="{{ link.uri }}">{{ link.text }}</a>
        {% endfor %}
        {% endif %}
    </span>
</section>
</nav>
{% endblock %}
</header>
<main>
{% block content %}
{{ content }}
{% endblock %}
</main>

<footer>
  {% block footer %}
<section>
<p>&copy; {{ current_year }}</p>
{% if footer_menu %}
<p>
{% for link in footer_menu %}
<a href="{{ link.uri }}">{{ link.text }}</a>
{% endfor %}
</p>
{% endif %}
</section>
{% endblock %}
</footer>

</body>
</html>
